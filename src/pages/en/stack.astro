---
import CardStack from "../../components/cardStack.astro";
import { stackData } from "../../data/stackData";
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Stack | Diovane Alves">
  <main class="mt-8">
    <h1 class="mb-2 text-2xl font-bold">Technologies and Tools</h1>
    <p class="opacity-85">
      Explore the technologies and tools that drive my career as a developer.
    </p>

    <div class="mt-6 space-y-7">
      {
        Object.entries(stackData).map(([category, items]) => (
          <div>
            <h1 class="mb-3 text-xl font-semibold">{category}</h1>
            <div class="grid grid-cols-2 place-items-center gap-3 md:grid-cols-4 lg:grid-cols-6">
              {items.map((item) => (
                <div>
                  <CardStack {...item} />
                </div>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </main></Layout
>
